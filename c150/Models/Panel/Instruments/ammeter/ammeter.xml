<?xml version="1.0"?>

<PropertyList>
	
	<path>ammeter.ac</path>

	<effect>
		<inherits-from>../../../Effects/interior/instrument-glass</inherits-from>
		<object-name>amps.glass</object-name>
	</effect>
	
	<effect>
		<inherits-from>Aircraft/c150/Models/Effects/interior/flashlight</inherits-from>
		<object-name>amps.bezel</object-name>
		<object-name>amps.glass</object-name>
	</effect>
	
	<animation>
		<type>material</type>
		<object-name>amps.bezel</object-name>
		<object-name>amps.glass</object-name>
		<emission>
			<red>0.95</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>amps.needle</object-name>
		<property>systems/electrical/amps</property>
		<interpolation>
			<entry>
				<ind>-60</ind>
				<dep>-25</dep>
			</entry>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>60</ind>
				<dep>25</dep>
			</entry>
		</interpolation>
		<center>
			<z-m>-0.019</z-m>
		</center>
		<axis>
			<x>-1.0</x>
		</axis>
	</animation>
	
</PropertyList>
